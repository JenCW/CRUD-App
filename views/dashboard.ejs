<h1>Dashboard</h1>
<div class="container mt-4">
    <div class="row">
        <div class="col">
            <h3>Total Costumes</h3>
            <p class="display-4"><%= totalCostumes %></p>
        </div>
        <div class="col">
            <h3>Costumes by Style</h3>
            <ul class="list-group">
                <% groupedByStyle.forEach(group => { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <%= group._id %>
                        <span class="badge bg-primary rounded-pill"><%= group.count %></span>
                    </li>
                <% }) %>
            </ul>
        </div>
    </div>
    <div class="mt-4">
        <a href="/costumes" class="btn btn-primary">View All Costumes</a>
    </div>
</div>

<div class="container mt-5">


    <h1 class="text-center text-primary mb-4" style="background-color: #ff12d7;"><%= action === 'Edit' ? 'Edit Costume' : 'Add New Costume' %></h1>
    <form action="<%= action === 'Edit' ? `/costumes/${costume._id}?_method=PUT` : '/costumes' %>" method="POST" class="p-4 bg-light border rounded shadow">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" name="name" id="name" value="<%= costume?.name || '' %>" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="style" class="form-label">Style</label>
            <select name="style" id="style" class="form-select" required>
                <option value="" disabled selected>Select Style</option>
                <option value="Lyrical" <%= costume?.style === 'Lyrical' ? 'selected' : '' %>>Lyrical</option>
                <option value="Contemporary" <%= costume?.style === 'Contemporary' ? 'selected' : '' %>>Contemporary</option>
                <!-- Add more options here -->
            </select>
        </div>
        <div class="mb-3">
            <label for="size" class="form-label">Size</label>
            <select name="size" id="size" class="form-select" required>
                <option value="" disabled selected>Select Size</option>
                <option value="CS" <%= costume?.size === 'CS' ? 'selected' : '' %>>CS</option>
                <!-- Add more sizes -->
            </select>
        </div>
        <div class="mb-3">
            <label for="color" class="form-label">Color</label>
            <input type="text" name="color" id="color" value="<%= costume?.color || '' %>" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="description" id="description" class="form-control" rows="4" required><%= costume?.description || '' %></textarea>
        </div>
        <button type="submit" class="btn btn-primary"style="background-color: #ff12d7;"><%= action === 'Edit' ? 'Update Costume' : 'Add Costume' %></button>
    </form>
</div>
